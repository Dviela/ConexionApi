<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.svalero.ConexionApi.AppController" >
    <center>
        <HBox spacing="5" alignment="center">

            <VBox spacing="20" alignment="center" style="-fx-background-color: #f0f0f0; -fx-padding: 6;">
                <ListView fx:id="booksListView" prefWidth="2000" prefHeight="700" />
                <Button fx:id="fetchBooksButton" text="Fetch Books" style="-fx-text-fill: red;"/>
            </VBox>
            <VBox spacing="20" alignment="center" style="-fx-background-color: #f0f0f0; -fx-padding: 6;">
                <ListView fx:id="usersListView" prefWidth="2000" prefHeight="700" />
                <Button fx:id="fetchUsersButton" text="Fetch Users" style="-fx-text-fill: blue;"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
